<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>http://trevorturk.com/</id>
  <title>Trevor Turk</title>
  <updated><%= @posts.first.post_modified.xmlschema %></updated>
  <link rel="alternate" type="text/html" href="http://trevorturk.com/" />
  <link rel="self" type="application/atom+xml" href="http://trevorturk.com/feed/" />
  <author>
    <name>Trevor Turk</name>
  </author>
  <% @posts.each do |post| %>
    <entry>
      <id>http://trevorturk.com/<%= post.to_param %></id>
      <title type="html"><![CDATA[<%= post.post_title %>]]></title>
      <updated><%= post.post_modified.xmlschema %></updated>
      <published><%= post.post_date.xmlschema %></published>
      <author>
        <name>Trevor Turk</name>
      </author>
      <content type="html" xml:base="http://trevorturk.com/<%= post.to_param %>"><![CDATA[<%=wp_format post.post_content %>]]></content>
      <link href="http://trevorturk.com/<%= post.to_param %>" />
    </entry>
  <% end %>
</feed>