<h1>Recent Posts</h1>
<ul>
  <% @posts.each do |post| %>
    <li>
      <form method="post" action="/presto/posts/destroy/<%= post.ID %>">
        <a href="/<%= post.to_param %>"><%= post %></a> &nbsp; 
        <a href="posts/edit/<%= post.id %>" class="subtle">(edit)</a> &nbsp; 
        <a href="#" class="subtle" onclick="parentNode.submit(); return false;">(x)</a>
      </form>
    </li>
  <% end if @posts %>
</ul>
<h1>New Post</h1>
<form method="post" action="/presto/posts">
  <input id="post_author" name="post_author" type="hidden" value="1" />
  <p><input id="post_title" name="post_title" type="text" size="30" /></p>
  <p><textarea id="post_content" name="post_content" cols="40" rows="8"></textarea></p>
  <p><input type="submit" name="submit" value="Post"></p>
</form>
