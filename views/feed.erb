<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <id><%= @options['home'] %></id>
  <title><%= @options['blogname'] %></title>
  <updated><%= @posts.first.post_modified.xmlschema %></updated>
  <link rel="alternate" type="text/html" href="<%= @options['home'] %>" />
  <link rel="self" type="application/atom+xml" href="<%= @options['home'] %>feed/" />
  <% @posts.each do |post| %>
    <entry>
      <id><%= @options['home'] %><%= post.to_param %></id>
      <title type="html"><![CDATA[<%= post.post_title %>]]></title>
      <updated><%= post.post_modified.xmlschema %></updated>
      <published><%= post.post_date.xmlschema %></published>
      <content type="html" xml:base="<%= @options['home'] %><%= post.to_param %>"><![CDATA[<%=wp_format post.post_content %>]]></content>
      <link href="<%= @options['home'] %><%= post.to_param %>" />
    </entry>
  <% end %>
</feed>